<div class="col-md-6 col-md-push-3">
  <div class="panel panel-default" style="border-color: <%= @event.color %>">
    <div class="panel-body">
      <dl class="dl-horizontal">
        <dt>Data Inicial</dt>
        <dd><%= @event.start_date.strftime('%d/%m/%Y %H:%M') %></dd>

        <dt>Data Final</dt>
        <dd><%= @event.end_date.strftime('%d/%m/%Y %H:%M') %></dd>

        <dt>Turma</dt>
        <dd><%= @event.turma.name unless @event.turma.nil? %></dd>

        <dt>Disciplina</dt>
        <dd><%= @event.discipline.name unless @event.discipline.nil? %></dd>

        <dt>Ações</dt>
        <dd>
          <%= link_to 'Alterar', edit_event_path(@event), class: 'btn btn-xs btn-warning' %>
          <%= link_to 'Excluir', @event, method: :delete, data: { confirm: 'Tem certeza que quer excluir esta aula?' }, class: 'btn btn-xs btn-danger' %>
        </dd>
      </dl>

    </div>
    <div class="panel-footer">
      <%= link_to 'Voltar', events_path, class: 'btn btn-sm btn-default' %>
      <%= link_to "Aulas Relacionadas", @event.recurring_event, class: 'btn btn-sm btn-warning' unless @event.recurring_event.nil? %>
    </div>
  </div>

</div>
