<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to 'Nova Aula Recorrente', new_recurring_event_path, class: 'btn btn-sm btn-primary' %>
  </div>
  <div class="panel-body">

    <table class='table table-striped table-bordered table-condensed'>
      <thead>
        <tr>
          <th>Data Inicial</th>
          <th>Data Final</th>
          <th class="text-center">FrequÃªncia</th>
          <th class="text-center">Qtd. Aulas</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @recurring_events.each do |recurring_event| %>
          <tr>
            <!-- <td><= event.title %></td> -->
            <td><%= recurring_event.start_date.strftime('%d/%m/%Y %H:%M') unless recurring_event.start_date.nil? %></td>
            <td><%= recurring_event.end_date.strftime('%d/%m/%Y %H:%M') unless recurring_event.end_date.nil? %></td>
            <td class="text-center"><%= recurring_event.frequency %></td>
            <td class="text-center"><%= recurring_event.events.count %></td>
            <td><%= link_to 'Detalhes', recurring_event, class: 'btn btn-xs btn-block btn-info' %></td>
            <td><%= link_to 'Alterar', edit_recurring_event_path(recurring_event), class: 'btn btn-xs btn-block btn-warning' %></td>
            <td><%= link_to 'Excluir', recurring_event, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-block btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    Aulas Recorrentes
  </div>
</div>
